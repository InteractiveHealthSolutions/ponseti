<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_photocontainer"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aqua_darker_B1D7F8"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tvIcrId"
            style="@style/questionBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp" />

        <AutoCompleteTextView
            android:id="@+id/actvEnterIcrId"
            style="@style/answerBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drop_shadow"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
            android:hint="Enter name"
            android:padding="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPreTreatmentPhotos"
        style="@style/questionBasics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Pre-treatment Photos" />

    <LinearLayout
        android:id="@+id/llVisits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvVisits"
            style="@style/questionBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="10dp"
            android:background="@color/aqua_darker_B1D7F8"
            android:gravity="center"
            android:padding="5dp"
            android:text="Visits" />

        <ListView
            android:id="@+id/lvVisits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

</LinearLayout>