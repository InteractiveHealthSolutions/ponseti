<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MainMenuTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu</item>
    </style>

    <style name="answerBasics" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="headerButtons" parent="answerBasics">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="informationBar" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="headingBasics" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="headingCheckboxBasics" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="questionBasics" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    
    <style name="button" parent="questionBasics">
        <item name="android:background">@drawable/state_list_light_green_shadow_bottom</item>
    </style>

</resources>