<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        

        <TextView
            android:id="@+id/tvSurName"
            style="@style/questionBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name/ Surname" />

        <EditText
            android:id="@+id/etSurName"
            style="@style/answerBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSurName"
            android:hint="Enter text..." />

        <TextView
            android:id="@+id/tvFirstName"
            style="@style/questionBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etSurName"
            android:text="First Name" />

        <EditText
            android:id="@+id/etFirstName"
            style="@style/answerBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFirstName"
            android:hint="Enter text..." />

        <TextView
            android:id="@+id/tvMiddleName"
            style="@style/questionBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etFirstName"
            android:text="Middle Name" />

        <EditText
            android:id="@+id/etMiddleName"
            style="@style/answerBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMiddleName"
            android:hint="Enter text..." />

        <TextView
            android:id="@+id/tvTitleOfEvaluator"
            style="@style/questionBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etMiddleName"
            android:text="Title of evaluator" />

        <Spinner
            android:id="@+id/spTitleOfEvaluator"
            style="@style/answerBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitleOfEvaluator"
            android:entries="@array/title_of_evaluator"
            android:hint="Enter text..." />
        <Button
            android:id="@+id/btnSave"
            style="@style/questionBasics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spTitleOfEvaluator"
            android:text="Save" />
    </RelativeLayout>

</ScrollView>